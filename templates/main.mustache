{{!
    @template block_teacher_tours/main
}}

<div class="teacher-tours-block">
    <div class="tour-header">
    </div>
    
    <div class="tour-content">
        {{#existing_tours}}
        <div class="existing-tours"> {{! TODO rename, make existing tours collapsible, tours should contain the steps }}
            <h5>{{#str}}existingtours, block_teacher_tours{{/str}}</h5>
            <div class="tour-list">
                {{#tours}}
                <div class="tour-card" data-tour-id="{{id}}">
                    <div class="tour-card-header">
                        <div class="tour-info">
                            <h6 class="tour-name">{{name}}</h6>
                        </div>
                    </div>
                    <div class="tour-card-footer">
                        <div class="tour-controls w-100">
                            <div class="form-check form-switch">
                                <input class="form-check-input tour-toggle" type="checkbox" 
                                       id="tour-toggle-{{id}}" {{#enabled}}checked{{/enabled}} 
                                       data-tour-id="{{id}}">
                                <label class="form-check-label" for="tour-toggle-{{id}}">
                                    <span class="enabled-text">
                                    <i class="icon fa-regular fa-eye fa-fw " title="Enable" role="img" aria-label="Enable"></i>
                                    </span>
                                    <span class="disabled-text">
                                    <i class="icon fa-regular fa-eye-slash fa-fw " title="Disable" role="img" aria-label="Disable"></i>
                                    </span>
                                </label>
                            </div>
                            <button class="btn btn-sm btn-outline-primary edit-tour" data-tour-id="{{id}}">
                                <i class="fa fa-edit"></i> {{#str}}edit, moodle{{/str}}
                            </button>
                            <button class="btn btn-sm btn-outline-danger delete-tour" data-tour-id="{{id}}">
                                <i class="fa fa-trash"></i> {{#str}}delete, moodle{{/str}}
                            </button>
                        </div>
                    </div>
                </div>
                {{/tours}}
            </div>
        </div>
        {{/existing_tours}}
        
        <div class="tour-actions">
            <button id="start-tour-creation" class="btn btn-primary tour-create-btn">
                <i class="fa fa-plus"></i> {{#str}}createnewtour, block_teacher_tours{{/str}}
            </button>
            <button id="start-sticky-creation" class="btn btn-primary tour-create-btn">
                <i class="fa fa-plus"></i> {{#str}}createnewstickytour, block_teacher_tours{{/str}}
            </button>
        </div>
    </div>
    
    <div class="tour-editor" id="tour-editor" style="display: none;">
        <div class="editor-header">
            <h5>{{#str}}creatingtour, block_teacher_tours{{/str}}</h5>
        </div>

        <div class="tour-preview" style="display: none;">
        <!-- Preview of the tour steps as they is being added -->
        </div>
        
        <div class="editor-content">
            <p class="editor-instructions">{{#str}}tourinstructions, block_teacher_tours{{/str}}</p>
            <!-- Current step indicator -->
            <div id="current-step-indicator" class="current-step-indicator" style="display: none;">
                <div class="alert alert-info">
                    <strong>{{#str}}currentlyediting, block_teacher_tours{{/str}}:</strong><br />
                    <span id="current-step-element"></span>
                </div>
            </div>
            
            <div id="tour-steps-container">
                <!-- Steps will be dynamically added here -->
            </div>

    </div>
    
    <div class="text-editor" id="text-editor" style="display: none;">
        <div class="text-editor-header">
            <h5>{{#str}}editstep, block_teacher_tours{{/str}}</h5>
        </div>
        <div class="text-editor-content">
            <div class="mb-3">
                <label for="step-title" class="form-label">{{#str}}steptitle, block_teacher_tours{{/str}}</label>
                <input type="text" id="step-title" class="form-control" placeholder="{{#str}}entertitle, block_teacher_tours{{/str}}">
            </div>
            <div class="mb-3">
                <label for="step-content" class="form-label">{{#str}}stepcontent, block_teacher_tours{{/str}}</label>
                <textarea id="step-content" class="form-control" rows="4" placeholder="{{#str}}entercontent, block_teacher_tours{{/str}}"></textarea>
            </div>
        </div>
        
        <div class="text-editor-actions">
            <button id="save-step" class="btn btn-primary">
                <i class="fa fa-plus"></i> {{#str}}addstep, block_teacher_tours{{/str}}
            </button>
            <button id="cancel-step-edit" class="btn btn-sm btn-outline-secondary">
                {{#str}}cancel, moodle{{/str}}
            </button>
        </div>
    </div>
    <div class="editor-actions">
        <button id="save-tour" class="btn btn-success" style="display: none;">
            <i class="fa fa-save"></i> {{#str}}savetour, block_teacher_tours{{/str}}
        </button>
    </div>
</div>
